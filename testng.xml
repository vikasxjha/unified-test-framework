<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Unified Test Framework" parallel="tests" thread-count="4">
    <!-- Listeners -->
    <listeners>
        <listener class-name="com.company.qa.unified.listeners.UnifiedTestListener"/>
    </listeners>
    <!-- E2E API + Database Tests -->
    <test name="E2E API+DB Tests">
        <classes>
            <class name="com.company.qa.unified.e2e.E2ETestRunner"/>
        </classes>
    </test>
    <!-- Smoke Tests -->
    <test name="Smoke Tests">
        <packages>
            <package name="com.company.qa.unified.e2e"/>
        </packages>
    </test>
</suite>
